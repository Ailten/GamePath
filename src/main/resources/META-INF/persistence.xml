<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="gamepath" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>java:comp/env/jdbc/gamepath</jta-data-source>
        <class>be.gamepath.projectgamepath.entities.Basket</class>
        <class>be.gamepath.projectgamepath.entities.BasketProductTheoric</class>
        <class>be.gamepath.projectgamepath.entities.Category</class>
        <class>be.gamepath.projectgamepath.entities.Language</class>
        <class>be.gamepath.projectgamepath.entities.OperatingSystem</class>
        <class>be.gamepath.projectgamepath.entities.Order</class>
        <class>be.gamepath.projectgamepath.entities.Pegi</class>
        <class>be.gamepath.projectgamepath.entities.Permission</class>
        <class>be.gamepath.projectgamepath.entities.PictureProduct</class>
        <class>be.gamepath.projectgamepath.entities.ProductKey</class>
        <class>be.gamepath.projectgamepath.entities.ProductTheoricCategory</class>
        <class>be.gamepath.projectgamepath.entities.ProductTheoric</class>
        <class>be.gamepath.projectgamepath.entities.ProductTheoricLanguage</class>
        <class>be.gamepath.projectgamepath.entities.ProductTheoricOperatingSystem</class>
        <class>be.gamepath.projectgamepath.entities.ProductTheoricPegi</class>
        <class>be.gamepath.projectgamepath.entities.Role</class>
        <class>be.gamepath.projectgamepath.entities.RolePermission</class>
        <class>be.gamepath.projectgamepath.entities.SocietyProducer</class>
        <class>be.gamepath.projectgamepath.entities.User</class>
        <class>be.gamepath.projectgamepath.entities.UserProductTheoric</class>

        <properties>
            <property name="hibernate.connection.provider_disables_autocommit" value="false"/>
        </properties>

    </persistence-unit>
</persistence>
